extends homepage

block header
  include components/shop/_header
block header
  include components/shop/_header-white

block page
  block breadcrumbs
    +breadcrumbs(['Главная', 'Путь до страницы', 'Страница'])

  .grid-container.page-container
    .grid-x.grid-padding-x
      block sidebar
        aside.cell.medium-7.large-5.sidebar
          block category-list
            .show-for-small-only(data-responsive-toggle="category-list" data-hide-for="medium")
              button.button.button_expanded(data-toggle) Навигация

            ul.category-list#category-list
              each i in ['Баки', 'Бутылки для воды', 'Венчики, лопатки', 'Доски разделочные', 'Ключницы', 'Кружки', 'Лотки', 'Миски, чаши и салатники', 'Кухонные приборы', 'Салфетницы', 'Солонки', 'Тазы', 'Турки']
                li.category-list__item
                  a.category-list__link(href="#")= i
                  ul.subcategory-list
                    each i in ['Баки', 'Бутылки для воды', 'Венчики, лопатки', 'Доски разделочные']
                      li.subcategory-list__item: a.subcategory-list__link(href="#")= i

          block filter
            .show-for-small-only(data-responsive-toggle="filter" data-hide-for="medium")
              button.button.button_expanded(data-toggle) Фильтр

            ul.accordion.accordion-filter#filter(data-accordion data-multi-expand="true" data-allow-all-closed="true")
              li.accordion-item.is-active(data-accordion-item)
                a.accordion-title(href="#") Цена
                .accordion-content(data-tab-content)
                  .price-range
                    .price-range-container
                      input.price-range-field(type="number" min=0 max="9999" oninput="validity.valid||(value='0');" id="min_price")
                      span.price-range-minus -
                      input.price-range-field(type="number" min=0 max="9999" oninput="validity.valid||(value='9999');" id="max_price")
                      span.price-range-currency руб.
                    .price-range-slider#slider-range(name="rangeInput")
              li.accordion-item.is-active(data-accordion-item)
                a.accordion-title(href="#") Цвет
                .accordion-content(data-tab-content)
                  .js-filter
                    ul.filter-list
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="blue")
                          label.step__label(for="blue")
                            span.filter-item__color(style="background-color:blue;")
                            | синий
                            span.filter-item__count 34
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="yellow")
                          label.step__label(for="yellow")
                            span.filter-item__color(style="background-color:yellow;")
                            | желный
                            span.filter-item__count 268
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="red")
                          label.step__label(for="red")
                            span.filter-item__color(style="background-color:red;")
                            | красный
                            span.filter-item__count 89
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="black")
                          label.step__label(for="black")
                            span.filter-item__color(style="background-color:black;")
                            | черный
                            span.filter-item__count 21
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="green")
                          label.step__label(for="green")
                            span.filter-item__color(style="background-color:green;")
                            | зеленый
                            span.filter-item__count 54
                    button.filter-list-toggler(type="button" data-value="Скрыть") Посмотреть все

              li.accordion-item(data-accordion-item)
                a.accordion-title(href="#") Материал
                .accordion-content(data-tab-content)
                  .js-filter
                    ul.filter-list
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="farfor")
                          label.step__label(for="farfor")
                            | фарфор
                            span.filter-item__count 34
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="keramika")
                          label.step__label(for="keramika")
                            | керамика
                            span.filter-item__count 268
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="steklo")
                          label.step__label(for="steklo")
                            | стекло
                            span.filter-item__count 89
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="some")
                          label.step__label(for="some")
                            | Еще что-то
                            span.filter-item__count 21
                      li.filter-list__item
                        .step.filter-item
                          input.step__input(type="checkbox" id="another-elem")
                          label.step__label(for="another-elem")
                            | Какой-то элемент
                            span.filter-item__count 54
                    button.filter-list-toggler(type="button" data-value="Скрыть") Посмотреть все
              li.accordion-item(data-accordion-item)
                a.accordion-title(href="#") Бренд
                .accordion-content(data-tab-content)
                  p Panel 1. Lorem ipsum dolor
              li.accordion-item(data-accordion-item)
                a.accordion-title(href="#") Размер
                .accordion-content(data-tab-content)
                  p Panel 1. Lorem ipsum dolor

      .cell.auto
        h1 Заголовок h1
        h2 Заголовок h2
        h3 Заголовок h3
        h4 Заголовок h4

        a.link(href="") Ссылка

        p Наша компания осуществляет продажу текстиля, посуды, хозяйственных и бытовых товаров по оптовым ценам. Мы сотрудничаем с организациями и индивидуальными предпринимателями, организаторами совменых покупок, а также с физическими лицами.
        p: <b>Оформление заказа</b>
        p Сделать заказ можно следующими способами:
        ul
          li На сайте через корзину. После регистрации на сайте Вы сможете посмотреть историю заказов, отследить статусы заказов и подписываться на новостные рассылки.
          li Отверстие позволяет производить полив некоторых растений в поддон – емкость под горшком, из которой, благодаря капиллярному эффекту, жидкость сама поднимается к корням.
        p: <b>Стоимость доставки</b>
        ol
          li Доставка по Санкт-Петербургу при заказе на сумму от 7000 до 15000 рублей - 500 рублей.
          li Доставка по Санкт-Петербургу при заказе от 15000 рублей осуществляется бесплатно.

        button.button(type="button") Подписаться
        button.button.button_hollow(type="button") Все новости
        button.button.button_buy(type="button") Купить

        button.button.button_rounded.left(type="button")
          include ../images/product-arrow.svg
        button.button.button_rounded(type="button")
          include ../images/product-arrow.svg

        +pagination()